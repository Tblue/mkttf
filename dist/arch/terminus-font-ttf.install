post_upgrade()
{
	printf 'Updating font cache... '
	fc-cache -fs
	echo 'done.'
}

post_remove()
{
	post_upgrade
}

post_install()
{
	post_upgrade

	echo
	echo '> The font files have been installed into /usr/share/fonts/TTF.'
	echo '> To make them available to Java applications, create symlinks'
	echo '> in /opt/java/jre/lib/fonts.'
}
